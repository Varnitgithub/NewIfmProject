<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:padding="4dp"
        android:layout_margin="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doc_LL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginTop="2dp"

        android:layout_marginBottom="2dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/btn_continue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/salary_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.01"
            android:lineHeight="15sp"
            android:lineSpacingExtra="2sp"
            android:layout_weight="1"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/salary_time"
            android:layout_gravity="center"
            android:text="Salary Slip"

            android:textColor="#121212"
            android:textSize="15sp"
            android:translationY="-1.11sp" />

        <TextView
            android:id="@+id/salary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2sp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginTop="6dp"
            android:layout_gravity="start"
            android:text="Jan 2023"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationY="-1.11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salary_txt2"
            />


        <TextView
            android:id="@+id/view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2sp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_gravity="center"
            android:text="view"
            android:textColor="#d14334"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/salary_txt2"
            app:layout_constraintStart_toEndOf="@id/salary_time"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationY="-1.11sp" />

        <ImageView
            android:id="@+id/salary_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/salary_txt2"
            app:layout_constraintStart_toEndOf="@id/view_icon"
            android:src="@drawable/salary_drop"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Download"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12.49sp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_marginStart="30dp"

        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/doc_LL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>