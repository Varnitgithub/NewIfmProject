<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appScreensBack"
    tools:context=".activities.SignUpWaysScreen">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/ifm360"
        android:padding="34dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/signup_Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/leave_btn_back_blue"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@id/already_Registered"
            android:layout_marginEnd="16dp"
            android:text="Sign up by Mobile"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/signup_CompanyCode"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/leave_btn_back_blue"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/new_Registration"
            app:layout_constraintStart_toStartOf="@id/new_Registration"
            app:layout_constraintEnd_toEndOf="@id/new_Registration"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_margin="20dp"

            android:layout_marginEnd="16dp"
            android:text="Sign up by Employee code"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>